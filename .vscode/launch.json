  "version": "0.2.0",
  "configurations": [
    {
      "name": "GUI: Launcher",
      "type": "debugpy",
      "request": "launch",
      "program": "src/launcher.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "GUI: Groups Exporter",
      "type": "debugpy",
      "request": "launch",
      "program": "src/apps/groups_exporter_gui.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "GUI: Previews Exporter",
      "type": "debugpy",
      "request": "launch",
      "program": "src/apps/previews_exporter_gui.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Groups Build",
      "type": "debugpy",
      "request": "launch",
      "program": "src/processors/groups/build_groups_json.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "D:/Libraries/Native Instruments/",
        "./out/",
        "--generate_txt=false"
      ],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Groups Process",
      "type": "debugpy",
      "request": "launch",
      "program": "src/processors/groups/process_groups_json.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "./out/all_groups.json",
        "./out/groups/",
        "--trim_silence",
        "--normalize",
        "--filter_pads",
        "--fill_blanks"
      ],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Previews Build",
      "type": "debugpy",
      "request": "launch",
      "program": "src/processors/previews/build_previews_json.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["./out/"],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Previews Process",
      "type": "debugpy",
      "request": "launch",
      "program": "src/processors/previews/process_previews_json.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "./out/all_previews.json",
        "./out/previews/",
        "--trim_silence",
        "--normalize"
      ],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Generate PDF",
      "type": "debugpy",
      "request": "launch",
      "program": "docs/makepdf.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["docs/GUIDE.md", "nitools-guide.pdf"],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Generate UPIDS",
      "type": "debugpy",
      "request": "launch",
      "program": "docs/upids/export.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  ]
}
